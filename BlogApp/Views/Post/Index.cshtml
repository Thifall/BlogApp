@model IEnumerable<BlogApp.Models.Post>

<h2>Lista Postów</h2>

<a asp-action="Create">Dodaj Nowy Post</a>

<table>
    <tr>
        <th>Tytuł</th>
        <th>Data</th>
        <th>Akcje</th>
    </tr>
    @foreach (var post in Model)
    {
        <tr>
            <td>@post.Title</td>
            <td>@post.CreateTime.ToString("yyyy-MM-dd")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@post.Id">Edytuj</a> |
                <a asp-action="Delete" asp-route-id="@post.Id">Usuń</a>
            </td>
        </tr>
    }
</table>
